<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', [:admin,user], class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, class: "btn btn-primary" %>
