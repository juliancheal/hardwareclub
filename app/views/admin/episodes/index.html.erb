<h1>Listing episodes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Notes</th>
      <th>Published at</th>
      <th>Seconds</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.name %></td>
        <td><%= episode.description %></td>
        <td><%= episode.notes %></td>
        <td><%= episode.published_at %></td>
        <td><%= episode.seconds %></td>
        <td><%= episode.published %></td>
        <td><%= link_to 'Show', episode, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_episode_path(episode), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', episode, class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_admin_episode_path, class: "btn btn-primary" %>
