<h1>All Episodes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Published</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.name %></td>
        <td><%= episode.description %></td>
        <td><%= episode.published_at.strftime("%d-%m-%Y") %></td>
        <td><%= link_to 'Show', episode, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>