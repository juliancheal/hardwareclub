<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @episode.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @episode.description %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @episode.notes %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @episode.published_at.strftime("%d-%m-%Y") %>
</p>

<p>
  <strong>Seconds:</strong>
  <%= @episode.seconds %>
</p>

<% if @episode.tags.any? %>
  <p>
    <strong>Tags:</strong>
    <% @episode.tags.each do |tag| %>
      <%= tag.name %> 
    <% end %>
  </p>
<% end %>

<%= link_to 'Back', episodes_path, class: "btn btn-primary" %>
